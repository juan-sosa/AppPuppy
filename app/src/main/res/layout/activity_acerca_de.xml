<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AcercaDeActivity">


    <ImageView
        android:id="@+id/imgPerfilCreador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/perfil_9"
        android:padding="20dp"

     ></ImageView>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/nombre_desadorrollador"
         android:textSize="@dimen/size_tvNombreDesarrolador"
         android:padding="20dp"

         ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_desarrollador"
        android:textSize="@dimen/size_tvDescripcionDesarrolador"
        android:padding ="20dp"
        ></TextView>


</LinearLayout>